@model CryptopediaWebApp.Models.NetworksDto

@{
    ViewBag.Title = "Edit";
}

<h2>Update Network</h2>

<div class="form-box">
    <form action="/Networks/Update/@Model.NetworksID" method="POST">
        <div style="display:none">
            @* Pass through the Networks ID *@
            <input type="text" name="NetworksID" value="@Model.NetworksID" />
        </div>
        <div class="field-container">
            <label>Name:</label> <input type="text" name="NetworksName" value="@Model.NetworksName" class="field-container__input-box" />
        </div>
        <div class="field-container">
            <label>Standard:</label> <input type="text" name="NetworksStandard" value="@Model.NetworksStandard" class="field-container__input-box" />
        </div>

        <div>
            <input type="submit" value="Update Networks" />

        </div>
    </form>
</div>
